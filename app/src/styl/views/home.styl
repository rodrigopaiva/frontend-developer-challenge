main
	& > section
		& > header
			h2
				text-align center
				font_mixin($FontPrimary, 18px, $gray)
				font-weight bold
				margin-bottom 50px

		& > article
			.list-products
				width 70%
				margin 0 auto
				display flex
				flex-wrap wrap

				li
					width calc(100% / 4 - 24px)
					margin-bottom 42px
					margin-right 30px

					&:nth-child(4n)
						margin-right 0

					figure
						border 1px solid $gray

						img
							width 100%

					h3
						margin 13px 0 10px 0
						font_mixin($FontPrimary, 14px, $gray2)

					p
						font_mixin($FontPrimary, 12px, $gray2)

					.old-price
						font_mixin($FontPrimary, 12px, $gray2)
						text-decoration line-through
						margin 10px 0 6px 0

					.price
						font_mixin($FontPrimary, 16px, $gray2)
						font-weight bold

					.price-divided
						font_mixin($FontPrimary, 12px, $gray2)
						margin 8px 0 10px 0

			& > button
				width 260px

			.loading-aux
				text-align center
				margin 15px 0